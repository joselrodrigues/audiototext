# Enhanced AudioToText Pipeline Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# AI Gateway Configuration (REQUIRED)
# ============================================================================
# Your OpenAI-compatible API endpoint
BASE_URL=http://your-ai-gateway-url:port/path

# Your API key for the AI gateway
API_KEY=your-api-key-here

# ============================================================================
# Enhanced Pipeline Models (REQUIRED)
# ============================================================================
# Context analysis model (efficient for course structure analysis)
CONTEXT_MODEL=o3-mini

# Enhancement model (high-quality note enhancement)
ENHANCEMENT_MODEL=gpt-4

# Embedding model for semantic search
EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# Directory Configuration (OPTIONAL)
# ============================================================================
# Input directory for video files
INPUT_FOLDER=input_videos

# Temporary directory for extracted audio
OUTPUT_FOLDER=output_audio

# Directory containing transcripts
TRANSCRIPTS_FOLDER=transcripts

# Directory for enhanced educational notes
KNOWLEDGE_BASE_FOLDER=knowledge_base

# ============================================================================
# Processing Configuration (OPTIONAL)
# ============================================================================
# Maximum chunk size for audio processing (in MB)
MAX_CHUNK_SIZE_MB=0.95

# Supported video file formats
SUPPORTED_VIDEO_FORMATS=.mp4,.avi,.mov,.mkv,.webm,.flv,.wmv

# Vector store chunk size (number of words per chunk)
CHUNK_SIZE=500

# Maximum overlap between chunks (in words)
CHUNK_OVERLAP=50

# ============================================================================
# Advanced Configuration (OPTIONAL)
# ============================================================================
# ChromaDB persistence directory
CHROMA_DB_PATH=./chroma_db

# Maximum number of search results
MAX_SEARCH_RESULTS=10

# Context generation timeout (seconds)
CONTEXT_TIMEOUT=300

# Enhancement timeout per note (seconds)
ENHANCEMENT_TIMEOUT=600

# ============================================================================
# Development & Testing (OPTIONAL)
# ============================================================================
# Enable debug logging
DEBUG=false

# Test mode (reduces API calls)
TEST_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO